[flake8]
strict = 1
max-line-length = 80
max-complexity = 12
select = A,B,C,D,E,F,W,B,T002,B901,B902,B903,B950
ignore=E501,D100,D101,D102,D103,D104,D105,D106,D107
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # Migrations are autogenerated
    migrations,
    */migrations,
    */*/migrations
